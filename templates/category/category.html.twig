{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/category.css') }}">
{% endblock %}

    <h1>Toutes les categories </h1>

    {# {% include 'layouts/_flash_message.html.twig'%}  ---> dans le base.twig avant le bloc body    #} 

 <div class="category-item">

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Categories</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  
  <tbody>

   {% for category in categories %}
    <tr>
      <th scope="row"></th>

      <td>{{category.name}}</td>

      <td id="btn"> 
      <a class="btn btn-outline btn-warning" href="{{ path('app_category_update', {'id': category.id}) }}">Modifier</a>
      <a onclick="return confirm('Etes-vous sûr de vouloir supprimer cette catégorie ?');" class="btn btn-danger" href="{{ path('app_category_delete', {'id': category.id}) }}">Supprimer</a>
      </td>
      
    </tr>
{% endfor %}

  </tbody>
</table>
    
   
     <a href="{{ path('app_category_new', { 'categories': categories }) }}" class="btn btn-success">Ajouter</a>
           
</div>

{% endblock %}
