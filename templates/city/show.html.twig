{% extends 'base.html.twig' %}

{% block title %}show city{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/main.css') }}">
<link rel="stylesheet" href="{{ asset('css/btn.css') }}">
<link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}

<div class="container">
    <h1>Ville</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Frais de port</th>
                <td>{{ city.shippingCost }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>
    {{ include('city/_delete_form.html.twig') }}
    <a class="btn btn-outline-secondary" style="font-weight: bold;" style="font-weight: bold;"
        href="{{ path('app_city_index') }}">back to list</a>

</div>
{% endblock %}