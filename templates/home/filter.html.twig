{% extends 'base.html.twig' %}

{% block title %}Filtre sous categories{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link rel="stylesheet" href="{{ asset('css/btn.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-5 mt-5">{{ subCategory.name }}</h1>
    <div class="row">
        {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('uploads/images/'~product.image)}}" class="imgproduct card-img-top" alt="image des produits">
                    <div class="card-body">
                        <a class="titleProductLink" href="{{ path('app_home_product_show', {'slug': product.slug}) }} "><h5 class="card-title titleProduct">{{ product.name }}</h5></a>
                        <p class="card-text">{{ product.description|slice(0,60) }}...</p>
                        <h3>{{ product.price }} â‚¬</h3> <!-- altgr + e pour le sigle euro-->
                        <a href="{{path('app_shopping_cart_add', {slug: product.slug}) }}" class="btn btn-outline-success">Ajouter au panier</a>
                    </div>
            </div>
        {% endfor %}
      
    </div>
</div>
{% endblock %}