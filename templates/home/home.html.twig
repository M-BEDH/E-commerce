{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}

   <div class="container mt-5">

         <h1> Bienvenue sur la page d'accueil </h1>

            {% for product in products %}
               <div class="card">

                 <img src="{{asset('uploads/images/' ~ product.image) }}" alt="Photo">
                 
                     <div class="card-body">

                         <a href="{{ path('app_home_product_show', {'id': product.id} )}}" class="btn btn-outline-primary">Voir produit</a>

                           <h5 class="card-title">{{ product.name }}</h5>

                            <p class="card-text">{{ product.description }}</p>
                            <p class="card-text">{{ product.price }} euros</p>

 
                             <a href="" class="btn btn-success">Ajouter au panier</a>
               </div>
           </div>
         {% endfor %}
                 {{ knp_pagination_render(products, 'layouts/_paginator.html.twig') }}              
  </div>
{% endblock %}
