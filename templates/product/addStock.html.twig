{% extends 'base.html.twig' %}
{% block title %}Ajouter au stock {% endblock %}

{% block body %}
<div class="container">
   <h1 class="text-center mt-5 mb-4">Ajouter du stock pour : {{ product.name }}</h1>

   {{ include('layouts/_flash_message.html.twig') }}

      {{ form_start(form) }}
      {{ form_row(form.quantity, {'label': 'Quantité à ajouter', 'attr': {'class': 'form-control'}}) }}
        <input type="submit" class="btn btn-info">
        {{ form_end(form) }}

</div>
 {% endblock %}