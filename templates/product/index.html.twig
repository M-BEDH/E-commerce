{% extends 'base.html.twig' %}

{% block title %}Tous les produits{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/main.css') }}">
<link rel="stylesheet" href="{{ asset('css/form.css') }}">
<link rel="stylesheet" href="{{ asset('css/btn.css') }}">
{% endblock %}


{% block body %}

<div class="container">
    <h1>Tous les produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description |slice(0,100) }}...</td>
                <td>{{ product.price }} euros</td>
                <td>
                    {% if product.stock > 0 %}
                    {{ product.stock}}
                    {% else %}
                    <span class="text-danger fw-bold">Rupture de stock</span>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-outline-success fw-bold"
                        href="{{ path('app_product_show', {'id': product.id}) }}">Afficher</a>
                    <a class="btn btn-outline-warning fw-bold"
                        href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>
                    <a class="btn btn-outline-info fw-bold"
                        href="{{ path('app_add_product_stock', {'id': product.id}) }}">Ajouter au stock</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_product_new') }}">Nouveau produit</a>
</div>
{% endblock %}