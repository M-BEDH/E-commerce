{% extends 'base.html.twig' %}

{% block title %}Description du produit{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/main.css') }}">
<link rel="stylesheet" href="{{ asset('css/btn.css') }}">
{% endblock %}

{% block body %}

<div class="container">
    <h1>Description du produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td class="">{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td class="">{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="">{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td class="">{{ product.price }}</td>
            </tr>

            <tr>
                <th>Image</th>
                <td class=""> <img src="{{asset('uploads/images/' ~ product.image) }}" alt="Photo"
                        style="width: 100px;"> </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_product_edit', {'name': product.name}) }}">Modifier</a>
    {{ include('product/_delete_form.html.twig') }}
    <a class="btn btn-warning" style="background-color: #4caf50; border-color:#4caf50;"
        href="{{ path('app_product_stock_add_history', {'id': product.id}) }}">Historique
        du stock</a> <br>
    <a class="btn btn-outline-secondary" style="font-weight: bold;" style="font-weight: bold;"
        style="font-weight: bold;" href="{{ path('app_product_index') }}">back to
        list</a>

</div>
{% endblock %}