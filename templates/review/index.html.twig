{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/main.css') }}">
<link rel="stylesheet" href="{{ asset('css/btn.css') }}">
<link rel="stylesheet" href="{{ asset('css/form.css') }}">

{% endblock %}

{% block title %}Review index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Les commentaires du produit {{ product.name }}:</h1>

    <div class="table table-striped">
        <table class="table table-bordered table-hover align-middle text-center w-50 m-auto">
            <thead>
                <tr>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for review in reviews %}
                <tr>
                    <td>{{ review.user.firstName }}</td>
                    <td class="text-break" style="max-width: 300px;">{{ review.comment }}</td>
                    <td>
                        <span class="badge bg-success fs-6">{{ review.note }}/5</span>
                    </td>
                    <td>
                        <div class="d-flex btnReview">

                             <a class="btn btn-outline-info" style="margin:0.1rem"
                                href="{{ path('app_review_show', {'id': review.id, 'slug': review.product.slug}) }}">Voir</a>

                            {% if app.user and review.user and app.user.id == review.user.id %}
                            <a class="btn btn-outline-warning" href="{{ path('app_review_edit', {'id': review.id}) }}">Modifier</a>

                            {{ include('review/_delete_form.html.twig') }}
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun commentaire trouv√©.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary mt-4 d-block" style="width: 220px;"
        href="{{ path('app_review_new', {'slug': product.slug}) }}">
        Nouveau commentaire
    </a>
</div>
{% endblock %}