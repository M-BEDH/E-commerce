{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/main.css') }}">
<link rel="stylesheet" href="{{ asset('css/btn.css') }}">
<link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block title %}Voir le commentaire{% endblock %}

{% block body %}
    <h1>{{ review.product.name }}</h1>

    <table class="table table-striped containerForm">
        <tbody>
            <tr>
                <th>Auteur</th>
                <td>{{ review.user.firstName }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ review.comment }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td><span class="badge bg-success fs-6">{{ review.note }}/5</span></td>
            </tr>
        </tbody>
    </table>
        {% if app.user and review.user and app.user.id == review.user.id %}
            <a class="btn btn-outline-warning btn-sm" style="display: block; margin: 0 auto; width: 200px;"
                href="{{ path('app_review_edit', {'id': review.id}) }}">Modifier</a>
                <div id="btnReview">{{ include('review/_delete_form.html.twig') }}</div>
        {% endif %}

     <a class="btn btn-outline-secondary" style="display: block; margin: 0 auto; width: 200px;" href="{{ path('app_review_index', {'slug': review.product.slug}) }}">retour Ã  la liste</a>

{% endblock %}
