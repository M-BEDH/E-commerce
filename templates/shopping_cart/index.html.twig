{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link rel="stylesheet" href="{{ asset('css/category.css') }}">
{% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Panier</h1>

    <table class="table table-bordered">
         <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Prix total</th>
            <th>Action</th>
        </tr>
        {% for item in items %}
          <tr>
            <td>{{item.product.name}}</td>
            <td>{{item.product.price}}</td>
            <td>{{item.quantity}}</td>
            <td>{{item.product.price * item.quantity}} €</td>
            <td><a href="{{ path('app_shopping_cart_delete', {'id': item.product.id}) }}" class='text-danger text-decoration-none'>Supprimer du panier</a></td>
          </tr>
        {% else %}
           <p>Votre panier est vide</p>
         {% endfor %}
    </table>
    
      {% if total > 0 %}
    <h2>Total: {{total}} €</h2>

    <div>
      <a data-turbo="false" href="" class="btn btn-primary">Valider la commande</a>
      <a href="{{ path('app_cart_delete') }}" class="btn btn-outline-danger">Supprimer le panier</a>
    </div>
    {% endif %}
</div>
{% endblock %}
